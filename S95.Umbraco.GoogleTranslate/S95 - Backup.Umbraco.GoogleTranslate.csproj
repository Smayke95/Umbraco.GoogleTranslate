<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ContentTargetFolders>.</ContentTargetFolders>
    <Product>S95.Umbraco.GoogleTranslate</Product>
    <PackageId>S95.Umbraco.GoogleTranslate</PackageId>
    <Title>S95.Umbraco.GoogleTranslate</Title>
    <Description>Plugin for Umbraco CMS which integrates Google Translate.</Description>
    <PackageTags>umbraco plugin package</PackageTags>
    <Authors>Smayke95</Authors>
    <Version>1.0.0</Version>
    <PackageProjectUrl>https://github.com/Smayke95/Umbraco.GoogleTranslate</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Smayke95/Umbraco.GoogleTranslate</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <AssemblyVersion>1.0.0</AssemblyVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Google.Cloud.Translation.V2" Version="3.2.0" />
    <PackageReference Include="Umbraco.Cms.Web.Website" Version="10.0.0" />
    <PackageReference Include="Umbraco.Cms.Web.BackOffice" Version="10.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="App_Plugins\S95.Umbraco.GoogleTranslate\**" ExcludeFromSingleFile="true" CopyToPublishDirectory="Always" />
    <None Include="buildTransitive\**" Pack="true" PackagePath="buildTransitive" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
</Project>
